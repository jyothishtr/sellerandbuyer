                        $("#createuser").click(function () {
                            $("#changeusername").hide();
                            $("#changepassword").hide();
                            $("#newuser").toggle();
                            $("#createuser").toggleClass('selectoption');
                            $("#updateusername").removeClass('selectoption');
                            $("#updatepassword").removeClass('selectoption');
                            $("#minordervalform").hide();
                            $("#minorderval").removeClass('selectoption');
                        });
                    
                        $("#updateusername").click(function () {
                            $("#newuser").hide();
                            $("#changepassword").hide();
                            $("#changeusername").toggle();
                            $("#updateusername").toggleClass('selectoption');
                            $("#createuser").removeClass('selectoption');
                            $("#updatepassword").removeClass('selectoption');
                            $("#minordervalform").hide();
                            $("#minorderval").removeClass('selectoption');
                        });
                        $("#updatepassword").click(function () {
                            $("#newuser").hide();
                            $("#changeusername").hide();
                            $("#changepassword").toggle();
                            $("#minordervalform").hide();
                            $("#minorderval").removeClass('selectoption');
                            $("#updatepassword").toggleClass('selectoption');
                            $("#updateusername").removeClass('selectoption');
                            $("#createuser").removeClass('selectoption');

                        });

                        $("#minorderval").click(function () {
                            $("#newuser").hide();
                            $("#changeusername").hide();
                            $("#changepassword").hide();
                            $("#minordervalform").toggle();
                            $("#minorderval").toggleClass('selectoption');
                            $("#updatepassword").removeClass('selectoption');
                            $("#updateusername").removeClass('selectoption');
                            $("#createuser").removeClass('selectoption');

                        });

                        

                    });
                    


</script>
