      <div class="col-md-8 order-md-2">
    
        <div id="newuser" style="display: none;">

            <!-- <h4 class="mb-3">Create User</h4> -->
            <form action="/settings/createuser" method="POST">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="firstName">Enter Username</label>
                  <input id="username" name="username" type="text" class="form-control" id="firstName" placeholder="" value="" >
                </div>
              </div>
    
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="firstName">Enter Password</label>
                  <input id="password" name="password" type="password" class="form-control" id="firstName" placeholder="" value="" >
                </div>
              </div>
    
    
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="firstName">Confrim Password</label>
                  <input type="password"   name="confirmpassword" id="confirmpassword" class="form-control" id="firstName" placeholder="" value="" >
                </div>
              </div>
              <button class="btn btn-primary align-right pull-right"  type="submit">Save</button>
            </form>
            
          </div>



    <div id="changepassword" style="display: none;">

        <!-- <h4 class="mb-3">Change Password</h4> -->
        <form  action="/settings/updatepassword" method="POST">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Enter Current Password</label>
              <input type="password" name = "currpass" class="form-control" id="firstName" placeholder="" value="" required>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Enter New Password</label>
              <input type="password" name = "newpass" class="form-control" id="firstName" placeholder="" value="" required>
            </div>
          </div>


          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Confrim New Password</label>
              <input type="password" name = "confirmnewpass"  class="form-control" id="firstName" placeholder="" value="" required>
            </div>
          </div>

    
          <button class="btn btn-primary align-right pull-right"  type="submit">Save</button>
        </form>
        
      </div>
       
     

      <div id="changeusername" style="display: none;">

        <!-- <h4 class="mb-3">Change Username</h4> -->
        <form  action="/settings/updateusername" method="POST" >

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Enter New Username</label>
              <input type="text" name= "newusername" class="form-control" id="firstName" placeholder="" value="" required>
            </div>
          </div>
    
          <button class="btn btn-primary align-right pull-right"  type="submit">Save</button>
        </form>
        
      </div>

      <div id="minordervalform" style="display: none;">

        <!-- <h4 class="mb-3">Change Username</h4> -->
        <form  action="/settings/minordervalue" method="POST" >

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Enter Min Order value</label>
              <p style="font-size: 12px;">Current Minimum order value : <%=minordervalue%></p>
              <input type="number" name= "minordervalue" min="0" step="0.001" class="form-control" id="minordervalue" placeholder="" value="<%=minordervalue%>" required>
            </div>
          </div>
    
          <button class="btn btn-primary align-right pull-right"  type="submit">Save</button>
        </form>
        
      </div>

   
      </div>


      </div> 
    </div>
<script>
  $(document).ready(function () {
